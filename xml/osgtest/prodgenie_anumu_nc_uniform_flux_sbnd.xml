<?xml version="1.0"?>

<!-- Production Project -->

<!DOCTYPE project [
<!ENTITY release "v04_24_00">
<!ENTITY ubfcl_version "v2_0_6">
<!ENTITY ubxml_version "v2_0_8">
<!ENTITY file_type "mc">
<!ENTITY run_type "physics">
<!ENTITY name "prodgenie_anumu_nc_uniform_flux_sbnd">
<!ENTITY tag "osgtest">
]>

<project name="&name;">

  <!-- Group -->
  <group>sbnd</group>

  <!-- Project size -->
  <numevents>10000</numevents>

  <!-- Operating System -->
  <os>SL5,SL6</os>

  <!-- Larsoft information -->
  <larsoft>
    <tag>&release;</tag>
    <qual>e4:prof</qual>
  </larsoft>

  <!-- Project stages -->

  <stage name="gen">
    <fcl>gen/genie/prodgenie_anumu_nc_uniform_flux_sbnd.fcl</fcl>
    <outdir>/sbnd/data/sbndpro/gen/&release;/&name;</outdir>
    <workdir>/sbnd/app/users/sbndpro/gen/&release;/&name;</workdir>
    <numjobs>100</numjobs>
    <datatier>generated</datatier>
    <defname>&name;_&tag;_gen</defname>
  </stage>

  <stage name="g4">
    <fcl>g4/standard_g4_sbnd.fcl</fcl>
    <outdir>/sbnd/data/sbndpro/g4/&release;/&name;</outdir>
    <workdir>/sbnd/app/users/sbndpro/g4/&release;/&name;</workdir>
    <numjobs>100</numjobs>
    <datatier>simulated</datatier>
    <defname>&name;_&tag;_g4</defname>
  </stage>

  <stage name="tpcsim">
    <fcl>detsim/standard_detsim_sbnd.fcl</fcl>
    <outdir>/sbnd/data/sbndpro/tpcsim/&release;/&name;</outdir>
    <workdir>/sbnd/app/users/sbndpro/tpcsim/&release;/&name;</workdir>
    <numjobs>100</numjobs>
    <datatier>tpc-simulated</datatier>
    <defname>&name;_&tag;_tpcsim</defname>
  </stage>

  <stage name="reco2D">
    <fcl>reco/standard_reco_sbnd_2D_noopt_nowires.fcl</fcl>
    <outdir>/sbnd/data/sbndpro/reco2D/&release;/&name;</outdir>
    <workdir>/sbnd/app/users/sbndpro/reco2D/&release;/&name;</workdir>
    <numjobs>100</numjobs>
    <datatier>reconstructed-2d</datatier>
    <defname>&name;_&tag;_reco2D</defname>
  </stage>

  <stage name="reco3D">
    <fcl>reco/standard_reco_sbnd_3D_noopt.fcl</fcl>
    <outdir>/sbnd/data/sbndpro/reco3D/&release;/&name;</outdir>
    <workdir>/sbnd/app/users/sbndpro/reco3D/&release;/&name;</workdir>
    <numjobs>100</numjobs>
    <datatier>reconstructed-3d</datatier>
    <defname>&name;_&tag;_reco3D</defname>
  </stage>

  <stage name="merge">
    <fcl>utility/copy.fcl</fcl>
    <outdir>/sbnd/data/sbndpro/reco/&release;/&name;</outdir>
    <workdir>/sbnd/app/users/sbndpro/reco/&release;/&name;</workdir>
    <numjobs>100</numjobs>
    <targetsize>2000000000</targetsize>
    <datatier>reconstructed</datatier>
    <defname>&name;_&tag;</defname>
  </stage>

  <!-- ubfcl version -->
  <ubfcl>&ubfcl_version;</ubfcl>

  <!-- ubxml version -->
  <ubxml>&ubxml_version;</ubxml>

  <!-- file type -->
  <filetype>&file_type;</filetype>

  <!-- run type -->
  <runtype>&run_type;</runtype>

</project>
